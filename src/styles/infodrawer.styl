.infodrawer-container
  width 30em
  position absolute
  right 0
  top 0
  bottom 0
  height 90vh
  /* This doesn't quite work when
     the page is too tall */
  .infodrawer
    overflow-y scroll
    max-height 100%
    header
      align-items center
      display flex
      flex-direction row
      div
        flex-grow 1
  .expansion-panel
    margin-top 1em
    margin-bottom 0.5em
